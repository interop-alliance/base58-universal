{
  "name": "@interop/base58-universal",
  "description": "A Typescript/Javascript isomorphic library template, for use in the browser, Node.js, and React Native.",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run clear && tsc -p tsconfig.json && ./build-dist.sh",
    "clear": "rimraf dist/*",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npm run build",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run lint && npm run rebuild && npm run test-node && npm run test-karma",
    "test-karma": "karma start karma.conf.js",
    "test-node": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md"
  ],
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-typescript": "^5.5.1",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts",
      "js"
    ],
    "spec": "test/**/*.spec.*"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ]
  },
  "keywords": [
    "interop",
    "alliance"
  ],
  "engines": {
    "node": ">=12.0"
  },
  "author": {
    "name": "Interop Alliance",
    "url": "https://github.com/interop-alliance/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/interop-alliance/base58-universal"
  },
  "homepage": "https://github.com/interop-alliance/base58-universal",
  "bugs": "https://github.com/interop-alliance/base58-universal/issues"
}
